package test;
import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
public class LoginDAO
{
	public UserBean ub=null;
	
	public UserBean login()
	{
		try
		{
		Connection con=DBConnection.getCon();
		PreparedStatement ps=con.prepareStatement("select * from userreg52 where uname=? and pword=?");
		ps.setString(1, ub.getuName());
		ps.setString(2, ub.getpWord());
		ResultSet rs=ps.executeQuery();
		
		if(rs.next())
		{
			ub=new UserBean();
			ub.setuName(rs.getString(1));
			ub.setpWord(rs.getString(2));
			ub.setfName(rs.getString(3));
			ub.setlName(rs.getString(2));
			ub.setAddr(rs.getString(5));
			ub.setmId(rs.getString(6));
			ub.setPhNo(rs.getLong(7));
		}
		
		}
		catch(Exception e) {
			e.printStackTrace();
		}
		return ub;
	}

}
